<UserControl
  x:Class="WpfApplication1.financialvalue"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WpfApplication1"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="300"
  d:DesignWidth="300"
  mc:Ignorable="d">
  <Grid>
    <StackPanel
      Orientation="Horizontal">
      <Button
        AutomationProperties.AutomationId="TickSize1Up"
        Content="up" />
      <Button
        Margin="5"
        AutomationProperties.AutomationId="TickSize1Down"
        Content="down" />
      <Button
        AutomationProperties.AutomationId="TickSize2Up"
        Content="up" />
      <Button
        Margin="5"
        AutomationProperties.AutomationId="TickSize2Down"
        Content="down" />
      <Button
        AutomationProperties.AutomationId="TickSize3Up"
        Content="up" />
      <Button
        AutomationProperties.AutomationId="TickSize3Down"
        Content="down" />
    </StackPanel>
  </Grid>
</UserControl>
